<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MerchindiserApp.Views.HomePage">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="https://static.thenounproject.com/png/196563-200.png" Clicked="ImageButton_Clicked_1"/>
    </ContentPage.ToolbarItems>

    <FlexLayout FlexLayout.Grow="1" HeightRequest="70" JustifyContent="Center" Direction="Column">

        <!-- Content -->
        <ImageButton Source="https://static.thenounproject.com/png/163136-200.png"
                         FlexLayout.Grow="1"
                         Clicked="ImageButton_Clicked"
                     Padding="30"
                     Margin="0, 100, 0, 40"/>

        <ImageButton Source="https://cdn4.iconfinder.com/data/icons/general04/png/256/clients.png"
                         FlexLayout.Grow="1"
                         Clicked="ImageButton_Clicked_2"
                     Padding="30"
                     Margin="0, 40, 0, 100"/>
    </FlexLayout>
</ContentPage>
