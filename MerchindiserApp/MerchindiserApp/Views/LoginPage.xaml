<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MerchindiserApp.Views.LoginPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout Padding="2,1,2,1" VerticalOptions="Center">
            <Image Source="https://i.ibb.co/fSYkD9f/915de267-2c63-4b7d-b7e2-d7db49c18753-200x200.png"
                   HeightRequest="200" WidthRequest="200"/>
          
            <Entry x:Name="Name"
                   Text="{Binding Name}"
                    Placeholder="Enter your Username"
                    HeightRequest="50"
                    Margin="20"/>
            <Entry x:Name="Password"
                   Text="{Binding Password}"
                    Placeholder="Enter your Password"
                    IsPassword="True"
                    HeightRequest="50" 
                    Margin="20"/>
            <Button VerticalOptions="Center" Text="Login" Command="{Binding LoginCommand}" Margin="40"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>