<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MerchindiserApp.Views.AboutPage">

    <FlexLayout Direction="Column">

        <!-- Header -->
        <Label Text="Welcome User"
               FontSize="Large"
               BackgroundColor="White"
               TextColor="CadetBlue"
               HorizontalTextAlignment="Center"
               Margin="40"/>
        <Label Text="Please select what you would like to do"
               TextColor="Black"
               FontSize="20"
               HorizontalTextAlignment="Center"
               Margin="1"/>

        <!-- Body -->
        <FlexLayout FlexLayout.Grow="1"
                    Margin="50">

            <!-- Content -->
            <ImageButton Source="https://static.thenounproject.com/png/163136-200.png"
                         HeightRequest="150"
                         WidthRequest="200"
                         FlexLayout.Grow="1"
                         Clicked="ImageButton_Clicked"/>
            <ImageButton Source="https://static.thenounproject.com/png/196563-200.png"
                         HeightRequest="150"
                         WidthRequest="200"
                         FlexLayout.Grow="1"
                         Clicked="ImageButton_Clicked_1"/>
            <ImageButton Source="https://cdn4.iconfinder.com/data/icons/general04/png/256/clients.png"
                         HeightRequest="150"
                         WidthRequest="200"
                         FlexLayout.Grow="1"
                         Clicked="ImageButton_Clicked_2"/>

            <!-- Navigation items-->
            <BoxView FlexLayout.Basis="50"
                     FlexLayout.Order="-1"
                     Color="White" />

            <!-- Aside items -->
            <BoxView FlexLayout.Basis="50"
                     Color="White" />

        </FlexLayout>

        <!-- Footer -->
        <Label Text=""
               FontSize="Large"
               BackgroundColor="White"
               TextColor="Black"
               HorizontalTextAlignment="Center" />
    </FlexLayout>
</ContentPage>
