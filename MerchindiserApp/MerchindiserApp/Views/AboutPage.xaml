<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MerchindiserApp.Views.AboutPage"
             xmlns:vm="clr-namespace:MerchindiserApp.ViewModels">

    <FlexLayout Direction="Column">
        <!-- Header -->
        <Label Text="Welcome"
               FontSize="Large"
               BackgroundColor="White"
               TextColor="Black"
               HorizontalTextAlignment="Center"/>

        <!-- Body -->
        <FlexLayout FlexLayout.Grow="1">

            <!-- Content -->
            <ImageButton Source="https://static.thenounproject.com/png/163136-200.png"
                         HeightRequest="100"
                         WidthRequest="100"
                         FlexLayout.Grow="1"
                         Clicked="ImageButton_Clicked"/>
            <ImageButton Source="https://static.thenounproject.com/png/196563.png"
                         HeightRequest="100"
                         WidthRequest="100"
                         FlexLayout.Grow="1"
                         Clicked="ImageButton_Clicked_1"/>
            <ImageButton Source="https://cdn4.iconfinder.com/data/icons/general04/png/256/clients.png"
                         HeightRequest="100"
                         WidthRequest="100"
                         FlexLayout.Grow="1"
                         Clicked="ImageButton_Clicked_2"/>

            <!-- Navigation Items -->
            <BoxView FlexLayout.Basis="50"
                     FlexLayout.Order="-1"
                     Color="White"/>

            <!-- Aside Items -->
            <BoxView FlexLayout.Basis="50"
                     Color="White"/>
        </FlexLayout>

        <!-- Footer -->
        <Label Text="FOOTER"
               FontSize="Large"
               BackgroundColor="White"
               TextColor="Black"
               HorizontalTextAlignment="Center"/>
    </FlexLayout>
</ContentPage>
